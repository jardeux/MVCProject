@model Category

<form method="post">
	<div class="border-black p-3 mt-4">
		<div class="row pb-2">
			<div class="d-flex justify-content-center">
				<h2 class="text-primary"> Delete Category</h2>
				<hr />
			</div>


		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" disabled type="text" class="form-control" />

		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" disabled type="text" class="form-control" />

		</div>
		<div class="d-flex justify-content-center">
			<button class="btn btn-danger row form-control" style="width:150px">Delete</button>
			<div class="ps-3">
				<a asp-controller="Category" asp-action="Index" class="row btn btn-foutline-primary btn-light border form-control" style="width:150px">Back to List</a>
			</div>
		</div>

	</div>


</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}