@model Category


<form method="post">
	<input type="hidden" asp-for="@Model.CategoryId" />

	<div class="border-black p-3 mt-4">
		<div class="row pb-2">
			<div class="d-flex justify-content-center">
				<h2 class="text-primary"> Edit Category</h2>
				<hr />
			</div>


		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder " type="text" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>
		<div class="d-flex justify-content-center">
			<button class="btn btn-primary row form-control" style="width:150px">Update</button>
			<div class="ps-3">
				<a asp-controller="Category" asp-action="Index" class="row btn btn-foutline-primary btn-light border form-control" style="width:150px">Back to List</a>
			</div>
		</div>

	</div>


</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}