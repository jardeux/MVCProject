@using Ecommerence.Models
@model List<Product>


@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Ürün Listesi</h2>
        <a asp-action="Upsert" class="btn btn-success btn-lg shadow">
            <i class="bi bi-plus-circle"></i> Create New Product
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h3>Kategori: @item.Category.Name</h3>
                        <p class="card-text text-muted">@item.Description?.Substring(0, Math.Min(100, item.Description.Length))...</p>
                        <h6 class="text-success fw-bold">@item.Price.ToString("C")</h6>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a asp-action="Upsert" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
