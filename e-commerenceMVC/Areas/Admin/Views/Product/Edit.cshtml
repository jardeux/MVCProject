@using Ecommerence.Models
@model Product


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 p-lg-3">
		<div action="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2"> Edit Product</h2>
			</div>
		</div>
	</div>
<div class="card-body p-4">
		<form method="post">
			<input type="hidden" asp-for="@Model.ProductId" />

			<div class="border-black">
				<div asp-validation-summary="All"></div>
				<div class="mb-3">
					<label asp-for="Title"></label>
					<input asp-for="Title" type="text" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>

				</div>
				<div class="mb-3">
					<label asp-for="ISBN"></label>
					<input asp-for="ISBN" type="text" class="form-control" />
					<span asp-validation-for="ISBN" class="text-danger"></span>

				</div>
				<div class="mb-3">
					<label asp-for="Author"></label>
					<input asp-for="Author" type="text" class="form-control" />
					<span asp-validation-for="Author" class="text-danger"></span>

				</div>
				<div class="mb-3">
					<label asp-for="ListPrice"></label>
					<input asp-for="ListPrice" type="text" class="form-control" />
					<span asp-validation-for="ListPrice" class="text-danger"></span>

				</div>
				<div class="mb-3">
					<label asp-for="Price50"></label>
					<input asp-for="Price50" type="text" class="form-control" />
					<span asp-validation-for="Price100" class="text-danger"></span>

				</div>
				<div class="mb-3">
					<label asp-for="Price100"></label>
					<input asp-for="Price100" type="text" class="form-control" />
					<span asp-validation-for="Price100" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Price"></label>
					<input asp-for="Price" type="text" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Description"></label>
					<input asp-for="Description" type="text" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>

				</div>
				<div class="d-flex justify-content-center">
					<button class="btn btn-primary row form-control" style="width:150px">Update</button>
					<div class="ps-3">
						<a asp-controller="Product" asp-action="Index" class="ms-4 row btn btn-foutline-primary btn-light border form-control" style="width:150px">Back to List</a>
					</div>
				</div>

			</div>


		</form>
		@section Scripts {
			<partial name="_ValidationScriptsPartial" />
		}
	</div>
</div>