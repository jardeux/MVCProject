@page "{id:int}"
@model EcommerenceRazor.Pages.Category.DeleteModel

<form method="post">
	<input type="hidden" asp-for="CategoryList.CategoryId" /> <!-- Doğru alan adı -->

	<div class="border-black p-3 mt-4">
		<div class="row pb-2">
			<div class="d-flex justify-content-center">
				<h2 class="text-danger">Delete Category</h2>
				<hr />
			</div>
		</div>

		<div asp-validation-summary="All"></div>

		<div class="mb-3">
			<label asp-for="CategoryList.Name"></label>
			<input asp-for="CategoryList.Name" readonly class="form-control" />
		</div>

		<div class="mb-3">
			<label asp-for="CategoryList.DisplayOrder"></label>
			<input asp-for="CategoryList.DisplayOrder" readonly class="form-control" />
		</div>

		<div class="d-flex justify-content-center">
			<button class="btn btn-danger row form-control" style="width:150px">Delete</button>
			<div class="ps-3">
				<a asp-page="/Category/Index" class="row btn btn-outline-primary btn-light border form-control" style="width:150px">Back to List</a>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
