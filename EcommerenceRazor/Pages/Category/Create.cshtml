@page
@model EcommerenceRazor.Pages.Category.CreateModel
@{
}
<form method="post">
	<div class="border-black p-3 mt-4">
		<div class="row pb-2">
			<div class="d-flex justify-content-center">
				<h2 class="text-primary"> Create Category</h2>
				<hr />
			</div>
			

		</div>
		<div asp-validation-summary="All"></div> 
		<div class="mb-3">
			<label asp-for="CategoryList.Name"></label>
			<input asp-for="CategoryList.Name" type="text" class="form-control" />
			<span asp-validation-for="CategoryList.Name" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="CategoryList.DisplayOrder"></label>
			<input asp-for="CategoryList.DisplayOrder" type="text" class="form-control" />
			<span asp-validation-for="CategoryList.DisplayOrder" class="text-danger"></span>

		</div>
		<div class="d-flex justify-content-center">
			<button class="btn btn-primary row form-control" style="width:150px">CREATE</button>
			<div class="ps-3">
				<a asp-page="/Category/Index" class="row btn btn-foutline-primary btn-light border form-control" style="width:150px">Back to List</a>
			</div>
		</div>
		
	</div>


</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}